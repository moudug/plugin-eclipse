<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="RapiderCxxErrorParser"
         name="Rapider error parser for C/C++"
         point="org.eclipse.cdt.core.ErrorParser">
      <errorparser
            class="fr.jayacode.rapider.checker.cxx.parser.ErrorParser"
            id="fr.jayacode.rapider.checker.cxx.parser"
            name="%errorparser.name">
         <context
               type="codan">
         </context>
      </errorparser>
   </extension>
   <extension
         id="fr.jayacode.rapider.checker.cxx.checkers"
         point="org.eclipse.cdt.codan.core.checkers">
      <category
            id="fr.jayacode.rapider.checker.cxx.category"
            name="%category.name">
      </category>
      <checker
            class="fr.jayacode.rapider.checker.cxx.checker.Checker"
            id="fr.jayacode.rapider.checker.cxx.checker"
            name="%checker.name">
         <problem
               category="fr.jayacode.rapider.checker.cxx.category"
               defaultEnabled="true"
               defaultSeverity="Warning"
               description="%problem.rule1.description"
               id="fr.jayacode.rapider.checker.cxx.problem1"
               messagePattern="{0}"
               name="%problem.rule1.name">
         </problem>
         <problem
               category="fr.jayacode.rapider.checker.cxx.category"
               defaultEnabled="true"
               defaultSeverity="Error"
               description="%problem.rule2.description"
               id="fr.jayacode.rapider.checker.cxx.problem2"
               messagePattern="{0}"
               name="%problem.rule2.name">
         </problem>
      </checker>
   </extension>

</plugin>
